<%- include('../partials/header') %>

<div class="card">
    <div class="card-body">
        <h1>Choose Game</h1>
        <div class="card-deck">
            <div class="card-body text-center d-inline">
                <h5 class="card-title">Tic-Tac-Toe</h5>
                <form action="/games" method="post">
                    <input type="hidden" name="game" value="tictactoe">
                    <button class="btn btn-outline-primary" type="submit"><i class="fas fa-th fa-5x"></i></button>
                </form>
            </div>
            <div class="card-body text-center d-inline">
                <h5 class="card-title">Connect 4</h5>
                <form action="/games" method="post">
                    <input type="hidden" name="game" value="connect4">
                    <button class="btn btn-outline-primary" type="submit"><i class="fas fa-chevron-circle-down fa-5x"></i></button>
                </form>
            </div>
        </div>
    </div>
</div>

